<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.tyn.tyndisco"
        version   = "1.0.0">
        
    <name>TYN Disco</name>
    <description>
        App verify for Disco
    </description>
    <author href="http://www.takeyournight.com" email="info@takeyournight.com">
        TYN
    </author>
    
    <gap:plugin name="com.phonegap.plugins.barcodescanner" />
    <plugin name="Capture" value="org.apache.cordova.Capture"/>    
        
    <feature name="http://api.phonegap.com/1.0/device" />
    <!--<feature name="http://api.phonegap.com/1.0/file" />-->
    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://api.phonegap.com/1.0/notification" />
    
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.Device" />
    </feature>
       
    <!--<feature name="File">
        <param name="android-package" value="org.apache.cordova.FileUtils" />
    </feature>       
    <feature name="File">
        <param name="ios-package" value="CDVFile" />
    </feature>    
    <feature name="Globalization">
        <param name="android-package" value="org.apache.cordova.Globalization" />
    </feature>    
    <feature name="Storage">
        <param name="android-package" value="org.apache.cordova.Storage" />
    </feature>-->
    <feature name="SplashScreen">
        <param name="ios-package" value="CDVSplashScreen" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.Notification" />
    </feature>
    <feature name="Notification">
        <param name="ios-package" value="CDVNotification" />
    </feature>
       
    <!--<icon src="icon/icon.png" />-->
    <icon src="icon/iphone/apple-29.png" gap:platform="ios" width="29" height="29" />
    <icon src="icon/iphone/apple-48.png" gap:platform="ios" width="48" height="48" />
    <icon src="icon/iphone/apple-57.png" gap:platform="ios" width="57" height="57" />
    <icon src="icon/iphone/apple-58.png" gap:platform="ios" width="58" height="58" />
    <icon src="icon/iphone/apple-64.png" gap:platform="ios" width="64" height="64" />
    <icon src="icon/iphone/apple-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icon/iphone/apple-114.png" gap:platform="ios" width="114" height="114" />
    <icon src="icon/iphone/apple-144.png" gap:platform="ios" width="144" height="144" />
    <icon src="icon/iphone/apple-175.png" gap:platform="ios" width="175" height="175" />
    <icon src="icon/iphone/apple-320.png" gap:platform="ios" width="320" height="320" />
    <icon src="icon/iphone/apple-1024.png" gap:platform="ios" width="1024" height="1024" />
    <icon src="icon/android/disco-36.png" gap:platform="android" gap:density="ldpi" />
    <icon src="icon/android/disco-48.png" gap:platform="android" gap:density="mdpi" />
    <icon src="icon/android/disco-72.png" gap:platform="android" gap:density="hdpi" />
    <icon src="icon/android/disco-96.png" gap:platform="android" gap:density="xhdpi" />
    
    <preference name="phonegap-version" value="3.5.0" />
    <preference name="KeyboardDisplayRequiresUserAction" value="true" />
    <preference name="SuppressesIncrementalRendering" value="false" />
    <preference name="UIWebViewBounce" value="true" />
    <preference name="TopActivityIndicator" value="gray" />
    <!--<preference name="EnableLocation" value="false" />-->
    <preference name="EnableViewportScale" value="false" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="ShowSplashScreenSpinner" value="true" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value=".25" />
    <preference name="MediaPlaybackRequiresUserAction" value="false" />
    <preference name="AllowInlineMediaPlayback" value="false" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="splashscreen" value="Resources\splash\Default-Portrait~ipad.png" />
    
    <!-- plugin -->
    <gap:plugin name="org.apache.cordova.core.camera" />
    <gap:plugin name="org.apache.cordova.core.device" />
    <gap:plugin name="org.apache.cordova.core.device-orientation" />
    <gap:plugin name="org.apache.cordova.core.media-capture" />
    <gap:plugin name="org.apache.cordova.core.console" />
    <gap:plugin name="org.apache.cordova.core.dialogs" />
    <gap:plugin name="org.apache.cordova.core.splashscreen" />

    
    <gap:splash src="Resources/splash/Default-Portrait~ipad.png" gap:platform="ios" width="1024" height="768" />
    <gap:splash src="Resources/splash/Default-Portrait~ipad.png" gap:platform="ios" width="768" height="1004" />
    <gap:splash src="Resources/splash/Default-Portrait@2x~ipad.png" gap:platform="ios" width="2048" height="1496" />
    <gap:splash src="Resources/splash/Default-Portrait@2x~ipad.png" gap:platform="ios" width="1536" height="2008" />
    
    <content src="index.html" />

    <access origin="*" />
</widget>
